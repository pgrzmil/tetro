{
	"compilerOptions": {
		"module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
	},
	"include": [
        "src/**/*.ts",
        "types/**/*",
	]
}